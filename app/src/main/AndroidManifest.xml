<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.study.bindr">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RateActivity" />
        <activity
            android:name=".SetStudySessionActivity"
            android:parentActivityName=".ChatboxActivity"
            android:theme="@style/ShowActionBar" />
        <activity
            android:name=".ChatboxActivity"
            android:parentActivityName=".ChatsListActivity" />
        <activity android:name=".ChatsListActivity" />
        <activity android:name=".Session_Activity" />
        <activity android:name=".Home_Activity" />
        <activity android:name=".EditCoursesActivity" />
        <activity android:name=".MatchActivity" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/ShowActionBar" />
        <activity android:name=".UserProfileActivity" />
        <activity
            android:name=".Bindr"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>